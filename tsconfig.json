{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",    
    "jsx": "react",
    "noEmit": true,
    "lib": ["dom", "es2019"],
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "newLine": "LF",
    "paths": {
      "~/*": ["./*"],
    }
  },
  
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
 